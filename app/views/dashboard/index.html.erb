<div class="p-8">
  <h2 class="text-xs font-semibold uppercase tracking-wider text-gray-400 mb-6">Dashboard</h2>

  <!-- Summary Cards â€” Kubera-style -->
  <div class="grid grid-cols-1 md:grid-cols-5 gap-6 mb-8">
    <!-- Net Worth Hero Card (left, spans 2 cols) -->
    <div class="md:col-span-2 bg-white rounded-2xl shadow-sm border border-gray-200 p-8 flex flex-col justify-between">
      <div>
        <p class="text-xs font-semibold uppercase tracking-wider text-gray-400">Net Worth</p>
        <div class="mt-3 text-teal-600">
          <%= format_currency_human(@net_worth) %>
        </div>
      </div>
      <div class="mt-6 space-y-2">
        <div class="flex items-center gap-2">
          <span class="text-xs font-semibold uppercase tracking-wider text-gray-400 w-16">1 Day</span>
          <span class="text-sm font-semibold <%= @one_day_change >= 0 ? 'text-emerald-600' : 'text-red-500' %>">
            <%= @one_day_change >= 0 ? '+' : '' %><%= format_currency(@one_day_change) %>
            (<%= format("%.1f", @one_day_change_pct) %>%)
          </span>
        </div>
        <div class="flex items-center gap-2">
          <span class="text-xs font-semibold uppercase tracking-wider text-gray-400 w-16">1 Month</span>
          <span class="text-sm font-semibold <%= @one_month_change >= 0 ? 'text-emerald-600' : 'text-red-500' %>">
            <%= @one_month_change >= 0 ? '+' : '' %><%= format_currency(@one_month_change) %>
            (<%= format("%.1f", @one_month_change_pct) %>%)
          </span>
        </div>
      </div>
    </div>

    <!-- Right column: 3 stacked cards (spans 3 cols) -->
    <div class="md:col-span-3 flex flex-col gap-6">
      <!-- Assets Card -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
        <p class="text-xs font-semibold uppercase tracking-wider text-gray-400">Assets</p>
        <p class="text-3xl font-bold tracking-tight text-gray-900 mt-2"><%= format_currency(@total_assets) %></p>
        <div class="mt-3 space-y-1">
          <div class="flex items-center gap-2">
            <span class="text-xs font-semibold uppercase tracking-wider text-gray-400 w-16">1 Day</span>
            <span class="text-sm font-semibold <%= @asset_one_day_change >= 0 ? 'text-emerald-600' : 'text-red-500' %>">
              <%= @asset_one_day_change >= 0 ? '+' : '' %><%= format_currency(@asset_one_day_change) %>
              (<%= format("%.1f", @asset_one_day_change_pct) %>%)
            </span>
          </div>
          <div class="flex items-center gap-2">
            <span class="text-xs font-semibold uppercase tracking-wider text-gray-400 w-16">1 Month</span>
            <span class="text-sm font-semibold <%= @asset_one_month_change >= 0 ? 'text-emerald-600' : 'text-red-500' %>">
              <%= @asset_one_month_change >= 0 ? '+' : '' %><%= format_currency(@asset_one_month_change) %>
              (<%= format("%.1f", @asset_one_month_change_pct) %>%)
            </span>
          </div>
        </div>
      </div>

      <!-- Debts Card -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
        <p class="text-xs font-semibold uppercase tracking-wider text-gray-400">Debts</p>
        <p class="text-3xl font-bold tracking-tight text-red-500 mt-2"><%= format_currency(@total_debts) %></p>
      </div>

      <!-- Cash on Hand Card -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
        <p class="text-xs font-semibold uppercase tracking-wider text-gray-400">Cash on Hand</p>
        <p class="text-3xl font-bold tracking-tight text-gray-900 mt-2"><%= format_currency(@cash_on_hand) %></p>
      </div>
    </div>
  </div>

  <!-- Net Worth Chart -->
  <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 mb-8"
       data-controller="net-worth-chart" data-net-worth-chart-url-value="<%= api_net_worth_history_path %>">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-xs font-semibold uppercase tracking-wider text-gray-400">Net Worth Over Time</h3>
      <div class="flex gap-1" data-net-worth-chart-target="periods">
        <% [["1M", "1m"], ["3M", "3m"], ["1Y", "1y"], ["YTD", "ytd"], ["ALL", "all"]].each do |label, value| %>
          <button data-action="net-worth-chart#setPeriod" data-period="<%= value %>"
                  class="px-2.5 py-1 rounded-md text-xs font-semibold uppercase tracking-wider transition-colors
                         <%= value == 'all' ? 'bg-teal-600 text-white' : 'text-gray-400 hover:bg-gray-100' %>">
            <%= label %>
          </button>
        <% end %>
      </div>
    </div>
    <div class="h-80">
      <div data-net-worth-chart-target="canvas"></div>
    </div>
  </div>

  <!-- Sankey Diagram -->
  <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
    <h3 class="text-xs font-semibold uppercase tracking-wider text-gray-400 mb-4">Money Flow</h3>
    <div data-controller="sankey-chart" data-sankey-chart-url-value="<%= api_sankey_data_path %>"
         style="height: 550px;">
      <div data-sankey-chart-target="canvas"></div>
    </div>
  </div>
</div>
