<div class="p-8">
  <h2 class="text-xs font-semibold uppercase tracking-wider text-gray-400 mb-6">Dashboard</h2>

  <!-- Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
      <p class="text-xs font-medium uppercase tracking-wider text-gray-400">Total Assets</p>
      <p class="text-4xl font-bold tracking-tight text-gray-900 mt-2"><%= format_currency(@total_assets) %></p>
    </div>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
      <p class="text-xs font-medium uppercase tracking-wider text-gray-400">Total Debts</p>
      <p class="text-4xl font-bold tracking-tight text-red-500 mt-2"><%= format_currency(@total_debts) %></p>
    </div>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
      <p class="text-xs font-medium uppercase tracking-wider text-gray-400">Net Worth</p>
      <p class="text-4xl font-bold tracking-tight text-teal-600 mt-2"><%= format_currency(@net_worth) %></p>
      <div class="mt-3 flex gap-2">
        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium <%= @one_day_change >= 0 ? 'bg-emerald-50 text-emerald-700' : 'bg-red-50 text-red-600' %>">
          1d: <%= @one_day_change >= 0 ? '+' : '' %><%= format_currency(@one_day_change) %>
        </span>
        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium <%= @one_month_change >= 0 ? 'bg-emerald-50 text-emerald-700' : 'bg-red-50 text-red-600' %>">
          1m: <%= @one_month_change >= 0 ? '+' : '' %><%= format_currency(@one_month_change) %>
        </span>
      </div>
    </div>
  </div>

  <!-- Net Worth Chart -->
  <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 mb-8">
    <h3 class="text-xs font-semibold uppercase tracking-wider text-gray-400 mb-4">Net Worth Over Time</h3>
    <div data-controller="net-worth-chart" data-net-worth-chart-url-value="<%= api_net_worth_history_path %>"
         class="h-80">
      <div data-net-worth-chart-target="canvas"></div>
    </div>
  </div>

  <!-- Sankey Diagram -->
  <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
    <h3 class="text-xs font-semibold uppercase tracking-wider text-gray-400 mb-4">Money Flow</h3>
    <div data-controller="sankey-chart" data-sankey-chart-url-value="<%= api_sankey_data_path %>"
         style="height: 550px;">
      <div data-sankey-chart-target="canvas"></div>
    </div>
  </div>
</div>
