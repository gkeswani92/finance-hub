<h1 class="text-2xl font-bold tracking-tight text-gray-900 mb-6">Dashboard</h1>

<!-- 4 Metric Cards -->
<div class="grid grid-cols-2 gap-4 lg:grid-cols-4 mb-6">
  <!-- Net Worth -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-5">
    <p class="text-xs font-medium text-gray-500 mb-1">Net Worth</p>
    <p class="text-2xl font-bold tracking-tight text-gray-900"><%= format_currency(@net_worth) %></p>
    <div class="mt-2 flex items-center gap-1">
      <span class="text-xs font-medium <%= change_color_class(@one_month_change) %>">
        <%= @one_month_change >= 0 ? '+' : '' %><%= format_currency(@one_month_change) %>
        (<%= format("%.1f", @one_month_change_pct) %>%)
      </span>
      <span class="text-xs text-gray-400">1M</span>
    </div>
  </div>

  <!-- Assets -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-5">
    <p class="text-xs font-medium text-gray-500 mb-1">Assets</p>
    <p class="text-2xl font-bold tracking-tight text-gray-900"><%= format_currency(@total_assets) %></p>
  </div>

  <!-- Debts -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-5">
    <p class="text-xs font-medium text-gray-500 mb-1">Debts</p>
    <p class="text-2xl font-bold tracking-tight text-red-500"><%= format_currency(@total_debts) %></p>
  </div>

  <!-- Investable -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-5">
    <p class="text-xs font-medium text-gray-500 mb-1">Investable</p>
    <p class="text-2xl font-bold tracking-tight text-gray-900"><%= format_currency(@investable) %></p>
  </div>
</div>

<!-- Net Worth Chart -->
<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6"
     data-controller="net-worth-chart" data-net-worth-chart-url-value="<%= api_net_worth_history_path %>">
  <div class="flex items-center justify-between mb-4">
    <h3 class="text-sm font-semibold text-gray-900">Net Worth Over Time</h3>
    <div class="flex gap-1" data-net-worth-chart-target="periods">
      <% [["1M", "1m"], ["3M", "3m"], ["1Y", "1y"], ["YTD", "ytd"], ["ALL", "all"]].each do |label, value| %>
        <button data-action="net-worth-chart#setPeriod" data-period="<%= value %>"
                class="px-2.5 py-1 rounded-md text-xs font-medium transition-colors
                       <%= value == 'all' ? 'bg-gray-900 text-white' : 'text-gray-500 hover:bg-gray-100' %>">
          <%= label %>
        </button>
      <% end %>
    </div>
  </div>
  <div class="h-80">
    <div data-net-worth-chart-target="canvas"></div>
  </div>
</div>

<!-- Sankey Diagram (desktop only) -->
<div class="hidden lg:block bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6">
  <h3 class="text-sm font-semibold text-gray-900 mb-4">Money Flow</h3>
  <div data-controller="sankey-chart" data-sankey-chart-url-value="<%= api_sankey_data_path %>"
       style="height: 550px;">
    <div data-sankey-chart-target="canvas"></div>
  </div>
</div>

<!-- 3 Allocation Donuts -->
<div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <h3 class="text-sm font-semibold text-gray-900 mb-4">By Asset Type</h3>
    <div data-controller="donut-chart" data-donut-chart-url-value="<%= api_allocation_by_asset_type_path %>">
      <div data-donut-chart-target="canvas" class="flex flex-col items-center"></div>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <h3 class="text-sm font-semibold text-gray-900 mb-4">By Member</h3>
    <div data-controller="donut-chart" data-donut-chart-url-value="<%= api_allocation_by_member_path %>">
      <div data-donut-chart-target="canvas" class="flex flex-col items-center"></div>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <h3 class="text-sm font-semibold text-gray-900 mb-4">By Currency</h3>
    <div data-controller="donut-chart" data-donut-chart-url-value="<%= api_allocation_by_currency_path %>">
      <div data-donut-chart-target="canvas" class="flex flex-col items-center"></div>
    </div>
  </div>
</div>
