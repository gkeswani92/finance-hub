<div class="max-w-lg mx-auto py-16">
  <div class="text-center mb-8">
    <svg class="w-12 h-12 text-teal-600 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    <h1 class="text-2xl font-bold tracking-tight text-gray-900">Welcome to Finance Hub</h1>
    <p class="text-sm text-gray-500 mt-2">Create a new family or join an existing one to get started.</p>
  </div>

  <div class="space-y-6">
    <!-- Create Family -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h3 class="text-sm font-semibold text-gray-900 mb-4">Create a Family</h3>
      <%= form_with(url: "/onboarding/create_family", method: :post, class: "space-y-4") do %>
        <div>
          <label class="block text-xs font-medium text-gray-500 mb-1">Family Name</label>
          <input type="text" name="family_name" required placeholder="e.g. The Smiths"
            class="w-full rounded-lg border-gray-300 shadow-sm focus:ring-teal-500 focus:border-teal-500 text-sm">
        </div>
        <div>
          <label class="block text-xs font-medium text-gray-500 mb-1">Base Currency</label>
          <select name="base_currency" class="w-full rounded-lg border-gray-300 shadow-sm focus:ring-teal-500 focus:border-teal-500 text-sm">
            <option value="USD">USD ($)</option>
            <option value="INR">INR (â‚¹)</option>
          </select>
        </div>
        <input type="submit" value="Create Family" class="w-full bg-gray-900 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-800 cursor-pointer transition-colors">
      <% end %>
    </div>

    <div class="text-center text-xs text-gray-400 uppercase font-medium">or</div>

    <!-- Join Family -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h3 class="text-sm font-semibold text-gray-900 mb-4">Join a Family</h3>
      <%= form_with(url: "/onboarding/join_family", method: :post, class: "space-y-4") do %>
        <div>
          <label class="block text-xs font-medium text-gray-500 mb-1">Invite Code</label>
          <input type="text" name="invite_code" required placeholder="Enter invite code"
            class="w-full rounded-lg border-gray-300 shadow-sm focus:ring-teal-500 focus:border-teal-500 text-sm">
        </div>
        <input type="submit" value="Join Family" class="w-full bg-white text-gray-900 border border-gray-300 px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-50 cursor-pointer transition-colors">
      <% end %>
    </div>
  </div>
</div>
