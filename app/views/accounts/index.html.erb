<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold tracking-tight text-gray-900">Accounts</h1>
  <div class="flex items-center gap-3">
    <%= link_to bulk_update_accounts_path, class: "text-sm font-medium text-gray-500 hover:text-gray-700 transition-colors" do %>
      Update Values
    <% end %>
    <%= link_to "Add Account", new_account_path, class: "bg-gray-900 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-800 transition-colors" %>
  </div>
</div>

<!-- Member filter tabs -->
<div class="flex gap-2 mb-6 flex-wrap">
  <%= link_to "All", accounts_path, class: "px-3 py-1.5 rounded-full text-xs font-medium transition-colors #{params[:member_id].blank? ? 'bg-gray-900 text-white' : 'bg-gray-100 text-gray-500 hover:bg-gray-200'}" %>
  <% @members.each do |member| %>
    <%= link_to member.name, accounts_path(member_id: member.id), class: "px-3 py-1.5 rounded-full text-xs font-medium transition-colors #{params[:member_id].to_s == member.id.to_s ? 'bg-gray-900 text-white' : 'bg-gray-100 text-gray-500 hover:bg-gray-200'}" %>
  <% end %>
</div>

<% @categories.each do |category| %>
  <% category_accounts = @accounts.select { |a| a.category_id == category.id } %>
  <% next if category_accounts.empty? %>

  <% category_total_usd = category_accounts.sum(&:latest_value_usd) %>

  <div class="mb-6" data-controller="collapsible">
    <button class="flex items-center gap-2 mb-3 group cursor-pointer" data-action="click->collapsible#toggle">
      <svg data-collapsible-target="icon" class="h-4 w-4 transition-transform text-gray-400 group-hover:text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
      </svg>
      <span class="text-sm font-semibold text-gray-900"><%= category.name %></span>
      <span class="text-xs text-gray-400"><%= category_accounts.size %> accounts</span>
      <span class="text-sm font-semibold text-gray-900 ml-auto"><%= format_currency(category_total_usd) %></span>
    </button>

    <div data-collapsible-target="body" class="space-y-2">
      <% category_accounts.sort_by { |a| -a.latest_value_usd }.each do |account| %>
        <%= link_to account_path(account), class: "flex items-center justify-between rounded-lg border border-gray-200 bg-white p-3 hover:shadow-sm transition-shadow group" do %>
          <div class="flex items-center gap-3 min-w-0">
            <div class="min-w-0">
              <p class="text-sm font-medium text-gray-900 truncate group-hover:text-teal-600 transition-colors"><%= account.name %></p>
              <div class="flex items-center gap-2 mt-0.5">
                <%= member_badge(account.member) %>
                <% if account.institution.present? %>
                  <span class="text-xs text-gray-400"><%= account.institution %></span>
                <% end %>
              </div>
            </div>
          </div>
          <div class="text-right flex-shrink-0 ml-4">
            <p class="text-sm font-semibold text-gray-900"><%= format_currency(account.latest_value_usd) %></p>
            <% if account.currency != "USD" %>
              <p class="text-xs text-gray-400"><%= format_currency(account.latest_value, account.currency) %></p>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>

<% if @accounts.empty? %>
  <div class="text-center py-16 text-gray-400">
    <p class="text-lg">No accounts yet.</p>
    <p class="mt-2"><%= link_to "Create your first account", new_account_path, class: "text-teal-600 hover:text-teal-700 font-medium" %></p>
  </div>
<% end %>

<% if @archived_accounts.any? %>
  <div class="mt-8" data-controller="collapsible">
    <button class="flex items-center gap-2 mb-3 cursor-pointer" data-action="click->collapsible#toggle">
      <svg data-collapsible-target="icon" class="h-4 w-4 transition-transform text-gray-400 rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
      </svg>
      <span class="text-sm font-semibold text-gray-500">Archived</span>
      <span class="text-xs text-gray-400"><%= @archived_accounts.size %></span>
    </button>
    <div data-collapsible-target="body" class="hidden space-y-2">
      <% @archived_accounts.each do |account| %>
        <div class="flex items-center justify-between rounded-lg border border-gray-200 bg-white p-3 opacity-60">
          <div>
            <p class="text-sm font-medium text-gray-500"><%= account.name %></p>
            <p class="text-xs text-gray-400"><%= account.category&.name %></p>
          </div>
          <%= button_to "Unarchive", unarchive_account_path(account), method: :patch, class: "text-xs text-teal-600 hover:text-teal-700 font-medium cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
