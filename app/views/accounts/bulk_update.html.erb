<h1 class="text-2xl font-bold tracking-tight text-gray-900 mb-2">Update Values</h1>
<p class="text-sm text-gray-500 mb-6">Update account values for today (<%= Date.current.strftime("%b %d, %Y") %>). Leave blank to skip.</p>

<%= form_with(url: save_bulk_update_accounts_path, method: :post) do %>
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <table class="w-full divide-y divide-gray-100">
      <thead>
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Account</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Category</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Member</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Last Value</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase w-48">New Value</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-50">
        <% @accounts.each do |account| %>
          <tr class="hover:bg-gray-50/50 transition-colors">
            <td class="px-6 py-3 text-sm font-medium text-gray-900"><%= account.name %></td>
            <td class="px-6 py-3 text-sm text-gray-500"><%= account.category.name %></td>
            <td class="px-6 py-3 text-sm"><%= member_badge(account.member) %></td>
            <td class="px-6 py-3 text-sm text-right text-gray-500"><%= format_currency(account.latest_value, account.currency) %></td>
            <td class="px-6 py-3 text-right">
              <input type="number" name="snapshots[<%= account.id %>]" step="0.01"
                     placeholder="<%= account.latest_value %>"
                     class="w-full text-right rounded-lg border-gray-300 shadow-sm text-sm focus:ring-teal-500 focus:border-teal-500">
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-6 flex items-center gap-4">
    <input type="submit" value="Save All" class="bg-gray-900 text-white px-6 py-2 rounded-lg text-sm font-medium hover:bg-gray-800 cursor-pointer transition-colors">
    <%= link_to "Cancel", accounts_path, class: "text-sm text-gray-400 hover:text-gray-600" %>
  </div>
<% end %>
