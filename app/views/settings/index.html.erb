<div class="p-8">
  <h2 class="text-2xl font-bold text-gray-900 mb-6">Settings</h2>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- Owners -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Owners</h3>
      <ul class="divide-y divide-gray-100">
        <% @owners.each do |owner| %>
          <li class="py-3 flex items-center justify-between">
            <span class="text-sm text-gray-900"><%= owner.name %></span>
            <span class="text-xs text-gray-400"><%= owner.accounts.count %> accounts</span>
          </li>
        <% end %>
      </ul>
    </div>

    <!-- Categories -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Categories</h3>
      <ul class="divide-y divide-gray-100">
        <% @categories.each do |category| %>
          <li class="py-3 flex items-center justify-between">
            <span class="text-sm text-gray-900">
              <%= category.name %>
              <% if category.is_debt? %>
                <span class="ml-2 text-xs bg-red-100 text-red-700 px-2 py-0.5 rounded-full">Debt</span>
              <% end %>
            </span>
            <span class="text-xs text-gray-400"><%= category.accounts.count %> accounts</span>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
